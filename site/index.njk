---
layout: layouts/base.njk
title: Jordan's Blog
description: Some words about computers
nav: True
---
<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('/img/home-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>{{ title }}</h1>
                    <hr class="small">
                    <span class="subheading">{{ description }}</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            {%- for post in collections.posts -%}
            <div class="post-preview">
                <a href="{{ post.url }}">
                    <h2 class="post-title">
                        {{ post.data.title }}
                    </h2>
                    <h3 class="post-subtitle">
                        {{ post.data.subtitle }}
                    </h3>
                </a>
                <p class="post-meta">Posted on {{ post.data.date }}</p>
            </div>
            {%- if not loop.last -%}
            <hr>
            {% endif %}
            {%- endfor -%}
        </div>
    </div>
</div>