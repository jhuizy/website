---
layout: layouts/base.njk
nav: True
---
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url({{ bg or '/img/post-bg.jpg' }})">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="page-heading">
                    <h1>{{ title }}</h1>
                    <hr class="small">
                    <span class="subheading">{{ subtitle }}</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          {{ content | safe }}
        </div>
    </div>
</div>